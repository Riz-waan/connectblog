---
import Navigation from "../components/Navigation.astro";
import SEO from "../components/SEO.astro"; // adjust the path as needed

const { title, description, pubDate, image } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <script is:inline>
      const theme = localStorage.getItem("theme") ?? "light";
      document.documentElement.classList.add(theme);
    </script>
    <title>Rizwaan Abdulkadir | Connecting the Dots</title>
    <meta
      name="description"
      content="Exploring connections between Life Sciences, Engineering, and Politics"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SEO
      title={title}
      description={description}
      pubDate={pubDate}
      image={image ??
        "https://media.licdn.com/dms/image/v2/D5603AQHPIZz7AGjsRg/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1641786361062?e=1749081600&v=beta&t=NQUgNG2GtzZNQL6vI6_4-y3PPeEyiJ7MUjdGYyx7wD8"}
      url={`https://rizwaan.me${Astro.url.pathname}`}
    />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Y3CR2MRWJQ"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Y3CR2MRWJQ");
    </script>

<script type="text/javascript">
    (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
    })(window, document, "clarity", "script", "qzolg4199q");
</script>
</head
  >
  <!-- Google tag (gtag.js) -->

  <body>
    <Navigation />
    <slot />
  </body><footer>
    <div class="footer" style="margin-top: 30px;">
      <div class="container">
        <p>
          &copy; {new Date().getFullYear()} Rizwaan Abdulkadir. All rights reserved.
        </p>
        <p>
          <a href="/privacy">Privacy Policy</a> |{" "}
          <a href="/terms">Terms of Service</a>
        </p>
      </div>
    </div>
  </footer>
</html>

<style>
  :root {
    --text-color: #2c3e50;
    --bg-color: #ffffff;
    --nav-bg: rgba(255, 255, 255, 0.8);
    --border-color: #e2e8f0;
    --hover-bg: #f1f5f9;
  }

  :root.dark {
    --text-color: #e2e8f0;
    --bg-color: #0f172a;
    --nav-bg: rgba(15, 23, 42, 0.9);
    --border-color: #2d3748;
    --hover-bg: #2d374855;
    --card-bg: #1e293b;
    --shadow-color: rgba(0, 0, 0, 0.3);
  }
  .footer {
    background-color: var(--nav-bg);
    color: var(--text-color);
    padding: 1rem 0;
    border-top: 1px solid var(--border-color);
    text-align: center;
  }

  .footer a {
    color: inherit;
    text-decoration: none;
    margin: 0 0.5rem;
  }

  .footer a:hover {
    text-decoration: underline;
    color: inherit;
  }

  .footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  html,
  body {
    margin: 0;
    font-family: "Inter", sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--bg-color);
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  /* Override default link styles */
  :root a:any-link {
    color: #4338ca;
    text-decoration: none;
  }

  :root.dark a:any-link {
    color: #818cf8;
  }

  /* Preserve white text in hero section */
  :root .hero a:any-link {
    color: white;
  }
</style>
